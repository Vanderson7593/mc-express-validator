{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["client/components/*"],
      "@hooks/*": ["hooks/*"],
      "@server/*": ["server/*"],
      "@constants": ["constants/index.ts"],
      "@types": ["types/index.ts"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.d.ts", "*.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.hbs"],
  "exclude": [
    "node_modules",
    ".next",
    ".vercel",
    "builders",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.server.test.ts",
    "**/*.server.spec.ts",
    "server-test-suite"
  ]
}
